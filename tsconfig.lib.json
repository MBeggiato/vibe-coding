{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/index.ts",
    "src/components/InteractiveCode.tsx",
    "src/components/InteractiveCodeErrorBoundary.tsx",
    "src/types/InteractiveCode.types.ts",
    "src/utils/CodeParser.ts"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.stories.tsx",
    "src/demo/**/*",
    "src/stories/**/*",
    "src/main.tsx",
    "src/App.tsx"
  ]
}
